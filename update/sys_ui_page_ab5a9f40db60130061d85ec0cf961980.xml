        <client_script><![CDATA[var app = angular.module("mainApp",[]);

app.controller('studentController', function ($scope){
	$scope.student = {
		firstName: "Hadi",
		lastName: "Behnia",
		fees: 600,
	
	subjects : [
		{name: 'Math', marks: 90},
		{name: 'Physics', marks: 85},
		{name: 'English', marks: 98},
		{name: 'Chemistry', marks: 75}
	],
	fullName: function() {
		var studentObject;
		studentObject = $scope.student;
		return studentObject.firstName + " " + studentObject.lastName;
	}
		
	};
});]]></client_script>
